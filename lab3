// Labaratory challenge no. 3:Grocery Shopping Calculator

import java.util.Scanner;

public class lab3 {
    public static void main(String[] args){
        // Create a Scanner object for user input
        Scanner groceryCalc = new Scanner(System.in);
        
        // Initialize item price and quantity
        System.out.print("Enter the price of cooking oil:");
        int firstItemPrice = groceryCalc.nextInt();
        // Generates new line
        groceryCalc.nextLine();
        
        System.out.print("Enter the quantity of cooking oil");
        int firstItemQuantity = groceryCalc.nextInt();
        
        groceryCalc.nextLine();
        
        System.out.print("Enter the price of dishwashing detergent");
        int secondItemPrice = groceryCalc.nextInt();
        
        groceryCalc.nextLine();
        
        System.out.print("Enter the quantity of dishwashing detergent");
        int secondItemQuantity = groceryCalc.nextInt();
        
        groceryCalc.nextLine();
        
        System.out.print("Enter the price of soda");
        int thirdItemPrice = groceryCalc.nextInt();
         
        groceryCalc.nextLine();
        
        System.out.print("Enter the quantity of soda");
        int thirdItemQuantity = groceryCalc.nextInt(); 
        
        groceryCalc.nextLine();
      
        // Print variables
        int subTotal = (firstItemPrice * firstItemQuantity) + (secondItemPrice * secondItemQuantity) + (thirdItemPrice * thirdItemQuantity);
        int discount = ((subTotal / 100) * 5);
        int salesTax = (subTotal - discount);
        int finalTotal = (salesTax + (subTotal - discount));
        
        //output is printed on new lines
        System.out.println("SubTotal: " + subTotal + subTotal);
        System.out.println("discount: " + (subTotal / 100) * 5);
        System.out.println("salesTax: " + (subTotal - discount));
        System.out.println("finalTotal = " + salesTax + (subTotal - discount));
        
        
    
        }            
 }
